<Window x:Class="WPF_Labs.First"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPF_Labs"
        mc:Ignorable="d"
        Title="First" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top" MinHeight="25">
            <MenuItem Header="Commands">
                <MenuItem Header="Copy" CommandTarget="{Binding ElementName=txtBox}" Command="Copy"/>
                <MenuItem Header="Paste" CommandTarget="{Binding ElementName=txtBox}" Command="Paste"/>
                <MenuItem Header="Help" CommandTarget="{Binding ElementName=txtBox}" Command="Help"/>
                <MenuItem Header="Select" CommandTarget="{Binding ElementName=txtBox}" Command="Select"/>
            </MenuItem>
        </Menu>
        <TextBox x:Name="txtBox" Text="TemplateText">
            <TextBox.CommandBindings>
                <CommandBinding Command="Help" Executed="HelpCommandBinding_OnExecuted"></CommandBinding>
                <CommandBinding Command="Select" Executed="SelectCommandBinding_OnExecuted"></CommandBinding>
            </TextBox.CommandBindings>
        </TextBox>
    </DockPanel>
</Window>
