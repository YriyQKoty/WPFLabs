<Window x:Class="WPF_Labs.Windows.Forth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPF_Labs.Windows"
        mc:Ignorable="d"
        Title="Forth" Height="450" Width="800">
    <Grid>
        <Canvas>
            <Calendar x:Name="Calendar" FirstDayOfWeek="Monday" Canvas.Top="25" Canvas.Left="50"></Calendar>
            <TextBox x:Name="TextBox" Width="125" Canvas.Top="50" Canvas.Left="300"></TextBox>
            <Button x:Name="Button" Width="100" Height="25" Canvas.Left="300" Canvas.Top="150" Click="Button_OnClick">Check date</Button>
        </Canvas>
        
    </Grid>
</Window>
