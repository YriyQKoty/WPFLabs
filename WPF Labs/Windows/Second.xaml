<Window x:Class="WPF_Labs.Windows.Second"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPF_Labs.Windows"
        mc:Ignorable="d"
        Title="Second" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock>Choose your element</TextBlock>
            <ListBox x:Name="MyListBox" Margin="10">
                <ListBoxItem>Earth</ListBoxItem>
                <ListBoxItem>Water</ListBoxItem>
                <ListBoxItem>Fire</ListBoxItem>
                <ListBoxItem>Air</ListBoxItem>
            </ListBox>
        </StackPanel>
        <StackPanel >
            <CheckBox x:Name="CheckBox1">First Name</CheckBox>
            <CheckBox x:Name="CheckBox2">Last Name</CheckBox>
            <CheckBox x:Name="CheckBox3" IsChecked="True">Third Name</CheckBox>
        </StackPanel>
        <Button x:Name="btn1" Margin="0,10, 0, 0" Height="25" Click="Btn1_OnClick">Check</Button>
    </StackPanel>
        

</Window>
